<!-- Start My Account Area -->
<section class="my_account_area pt--80 pb--55 bg--white">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-12">
                <div class="my__account__wrapper">
                    <h3 class="account__title">Login</h3>
                    @if (ViewBag.LoginRedirectMessage != null)
                    {
                        <div class="alert alert-info">@ViewBag.LoginRedirectMessage</div>
                    }
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="account__form">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="input__box">
                                @Html.LabelFor(m => m.Email, new { @class = "control-label col-md-2" })
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="input__box">
                                @Html.LabelFor(m => m.Password, new { @class = "control-label col-md-2" })
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="form__btn">
                                <button type="submit">Login</button>
                                <label class="label-for-checkbox">
                                    <input id="rememberme" class="input-checkbox" name="rememberme" value="forever" type="checkbox">
                                    <span>Remember me</span>
                                </label>
                            </div>
                            <a class="forget_pass" href="#">Lost your password?</a>
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-6 col-12">
                <div class="my__account__wrapper">
                    <h3 class="account__title">Register</h3>
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                <div class="account__form">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="input__box">
                        @Html.Label("FirstName", new { @class = "control-label col-md-2" })
                        <input type="text" name="FirstName" class="form-control" />
                    </div>
                    <div class="input__box">
                        @Html.Label("LastName", new { @class = "control-label col-md-2" })
                        <input type="text" name="LastName" class="form-control" />
                    </div>
                    <div class="input__box">
                        @Html.Label("Email address", new { @class = "control-label col-md-2" })
                        <input type="email" name="Email" class="form-control" />
                    </div>
                    <div class="input__box">
                        @Html.Label("Password", new { @class = "control-label col-md-2" })
                        <input type="password" name="Password" class="form-control" />
                    </div>
                    <div class="form__btn">
                        <button type="submit">Register</button>
                    </div>
                </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End My Account Area -->
